<UserControl x:Class="Tischreservierung_Employee.CustomerTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tischreservierung_Employee"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0" Name="FilterTextBox" TextChanged="FilterTextBos_TextChanged"></TextBox>
        <ListBox Grid.Row="1" Name="CustomerListBox" SelectionChanged="CustomerListBox_SelectionChanged"></ListBox>
        <ListBox Grid.Row="2" Name="ReservationListBox"></ListBox>
    </Grid>
</UserControl>
